[alias]
    aa = add --all
    br = branch
    bd = branch -D
    co = checkout
    cb = checkout -b
    ci = commit
    cm = commit --amend --no-edit
    cme = commit --amend --edit --allow-empty
    r = reset
    rh = reset --hard
    st = status
    uncommit = reset HEAD^
    unci = reset HEAD^
    logg = log --graph --pretty=format:'%Cred%h %Cgreen%cd%Creset -%C(yellow)%d%Creset %s %C(bold blue)<%an>%Creset' --abbrev-commit --date=short
[core]
    autocrlf = false  # don't mess up crlf
    eol = lf  # use unix style line endings
    ignorecase = false  # don't ignore case
    excludesfile = ~/.gitignore  # global gitignore file
[color]
    ui = true
[push]
    default = simple
    autoSetupRemote = true
